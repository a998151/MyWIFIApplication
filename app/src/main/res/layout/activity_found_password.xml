<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alemon.mywifiapplication.FoundPasswordActivity">

    <TextView
        android:id="@+id/found_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入用户名"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:textColor="#c2c5c9"/>

    <EditText
        android:id="@+id/found_username"
        android:textColorHint="#c2c5c9"
        android:textColor="#c2c5c9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="110dp"
        android:inputType="textPersonName"
        />
    <Button
        android:id="@+id/found_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检测"
        android:textSize="20dp"
        android:textColor="@color/text_color"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="140dp"/>

</RelativeLayout>
